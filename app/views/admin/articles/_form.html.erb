<%= simple_form_for([:admin, @article], html: { class: 'form-horizontal' }) do |f| %>

  <%= render partial: 'shared/form_errors', locals: { object: @article } %>

  <%= f.input :name, placeholder: 'Enter article name' %>

  <br/>

  <%= f.input :content, as: :text, input_html: { cols: 5, rows: 10, placeholder: 'Enter article content' } %>

  <div class= "form-actions">
    <%= f.button :submit, class: "btn btn-success"%>
  </div>

<% end %>

<hr class="featurette-divider">
