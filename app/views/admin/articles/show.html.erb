<%= provide(:title, "#{@article.name}") %>

<div class="btn-group pull-right">
  <%= link_to('Add an Article', new_admin_article_path, class: 'btn btn-info') %>
  <%= link_to "Edit", edit_admin_article_path(@article), class: 'btn btn-warning' %>
  <%= link_to('Back', admin_articles_path, class: 'btn btn-default') %>
</div>

<div class="page-header">
  <h1><%= @article.name %></h1>
</div>

<%= markdown(@article.content) %>


<hr class="featurette-divider">

<div class="row comments">
  <div class="col-md-8">
    <div class="page-header">
      <h1><small class="pull-right"><%= @comments.count %></small> Comments </h1>
    </div>
    <div class="comments-list">
      <% @comments.each do|comment| %>
        <div class="media">
          <p class="pull-right"><small><%= time_ago_in_words(comment.created_at) %></small></p>
          <div class="media-body">
            <h4 class="media-heading user_name"><%= comment.try(:user).try(:name) %></h4>
            <%= comment.try(:comment)%>
          </div>
        </div>
      <% end %>`
    </div>
  </div>
</div>
